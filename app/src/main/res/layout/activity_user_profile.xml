<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Navigation Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:elevation="2dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow_left"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />

            <!-- Username and Verified Icon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:id="@+id/usernameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kyan.coleman"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/verifiedIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/verified"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- More Options Button -->
            <ImageView
                android:id="@+id/moreOptionsButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/more_vertical"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />

        </LinearLayout>

        <!-- Profile Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top">

                <!-- Profile Image -->
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp"
                    android:background="@drawable/profile_gradient_border">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/shutterstock_1163329165"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <!-- Statistics -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="24dp"
                    android:gravity="center">

                    <!-- Stats Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/postsCountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="151"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="posts"
                                android:textSize="14sp"
                                android:textColor="@android:color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/followersCountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="112K"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="followers"
                                android:textSize="14sp"
                                android:textColor="@android:color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/followingCountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="162"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="following"
                                android:textSize="14sp"
                                android:textColor="@android:color/black" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- User Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- Full Name -->
                <TextView
                    android:id="@+id/fullNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kyan Coleman"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <!-- Username Tag -->
                <TextView
                    android:id="@+id/usernameTagText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@kyan.coleman"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/username_tag_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp" />

                <!-- Bio -->
                <TextView
                    android:id="@+id/bioText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blogger\nAt vero eos et accusamus et iusto odio dignissimos ducimus qui blanditiis praesentium voluptatum deleniti atque corrupti quos dolores et quas molestias excepturi sint occaecat... more"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="2dp" />

                <!-- Website Link -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/link_icon"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/websiteText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kyan.co"
                        android:textSize="14sp"
                        android:textColor="#1976D2" />

                </LinearLayout>

                <!-- Social Proof -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/shutterstock_1163329165"
                            android:scaleType="centerCrop"
                            android:background="@drawable/profile_circle_background" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/shutterstock_1011776404"
                            android:scaleType="centerCrop"
                            android:background="@drawable/profile_circle_background"
                            android:layout_marginStart="-8dp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/shutterstock_1033038292"
                            android:scaleType="centerCrop"
                            android:background="@drawable/profile_circle_background"
                            android:layout_marginStart="-8dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Followed by your friend, another friend and 297 others"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <!-- Follow Button -->
                <LinearLayout
                    android:id="@+id/followButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/follow_button_background"
                    android:paddingHorizontal="20dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/followButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Follow"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Message Button -->
                <LinearLayout
                    android:id="@+id/messageButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/action_button_background"
                    android:paddingHorizontal="20dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Message"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Email Button -->
                <LinearLayout
                    android:id="@+id/emailButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/action_button_background"
                    android:paddingHorizontal="20dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Add Button -->
                <ImageView
                    android:id="@+id/addButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/person_add"
                    android:background="@drawable/add_button_background"
                    android:padding="10dp" />

            </LinearLayout>

            <!-- Highlights Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="4dp">

                        <!-- Highlight 1 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                app:cardCornerRadius="32dp"
                                app:cardElevation="0dp"
                                android:background="@drawable/highlight_circle_background">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/shutterstock_100407100"
                                    android:scaleType="centerCrop" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Highlight 1"
                                android:textSize="12sp"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="4dp"
                                android:maxLines="1"
                                android:ellipsize="end" />

                        </LinearLayout>

                        <!-- Highlight 2 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                app:cardCornerRadius="32dp"
                                app:cardElevation="0dp"
                                android:background="@drawable/highlight_circle_background">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/shutterstock_1011776404"
                                    android:scaleType="centerCrop" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Highlight 2"
                                android:textSize="12sp"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="4dp"
                                android:maxLines="1"
                                android:ellipsize="end" />

                        </LinearLayout>

                        <!-- Highlight 3 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                app:cardCornerRadius="32dp"
                                app:cardElevation="0dp"
                                android:background="@drawable/highlight_circle_background">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/shutterstock_1033038292"
                                    android:scaleType="centerCrop" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Highlight 3"
                                android:textSize="12sp"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="4dp"
                                android:maxLines="1"
                                android:ellipsize="end" />

                        </LinearLayout>

                        <!-- Highlight 4 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="16dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                app:cardCornerRadius="32dp"
                                app:cardElevation="0dp"
                                android:background="@drawable/highlight_circle_background">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/shutterstock_1068919502"
                                    android:scaleType="centerCrop" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Highlight 4"
                                android:textSize="12sp"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="4dp"
                                android:maxLines="1"
                                android:ellipsize="end" />

                        </LinearLayout>

                        <!-- New Highlight -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <androidx.cardview.widget.CardView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                app:cardCornerRadius="32dp"
                                app:cardElevation="0dp"
                                android:background="@drawable/new_highlight_background">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/plus"
                                    android:scaleType="centerCrop" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New"
                                android:textSize="12sp"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="4dp"
                                android:maxLines="1"
                                android:ellipsize="end" />

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

            <!-- Content Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center">

                <!-- Grid Tab -->
                <ImageView
                    android:id="@+id/gridTabButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/grid"
                    android:background="@drawable/tab_selected_background"
                    android:padding="4dp"
                    android:layout_marginEnd="32dp" />

                <!-- Tagged Tab -->
                <ImageView
                    android:id="@+id/taggedTabButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/person_outline"
                    android:background="@drawable/tab_unselected_background"
                    android:padding="4dp" />

            </LinearLayout>

            <!-- Posts Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- First Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:src="@drawable/shutterstock_100407100"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="1dp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:src="@drawable/shutterstock_1011776404"
                        android:scaleType="centerCrop"
                        android:layout_marginHorizontal="1dp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:src="@drawable/shutterstock_1033038292"
                        android:scaleType="centerCrop"
                        android:layout_marginStart="1dp" />

                </LinearLayout>

                <!-- Second Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2dp">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:src="@drawable/shutterstock_1068919502"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="1dp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:src="@drawable/shutterstock_100407100"
                        android:scaleType="centerCrop"
                        android:layout_marginHorizontal="1dp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:src="@drawable/shutterstock_1011776404"
                        android:scaleType="centerCrop"
                        android:layout_marginStart="1dp" />

                </LinearLayout>

                <!-- Third Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:src="@drawable/shutterstock_1033038292"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="1dp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:src="@drawable/shutterstock_1068919502"
                        android:scaleType="centerCrop"
                        android:layout_marginHorizontal="1dp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:src="@drawable/shutterstock_100407100"
                        android:scaleType="centerCrop"
                        android:layout_marginStart="1dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
