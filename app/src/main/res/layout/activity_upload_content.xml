<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    tools:context=".UploadContentActivity">

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@android:color/white">

        <!-- Cancel Button -->
        <TextView
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="16sp"
            android:textColor="#FF8B4513"
            android:textStyle="bold" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Recents Dropdown -->
        <LinearLayout
            android:id="@+id/recentsDropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recents"
                android:textSize="16sp"
                android:textColor="#FF8B4513"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/chevron_down"
                android:layout_marginStart="4dp"
                android:contentDescription="Dropdown arrow"
                app:tint="#FF8B4513" />

        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Next Button -->
        <TextView
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="16sp"
            android:textColor="#FF8B4513"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Main Image Preview -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Main Preview Image -->
        <ImageView
            android:id="@+id/mainPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/shutterstock_1163329165"
            android:scaleType="centerCrop"
            android:contentDescription="Main preview image" />

        <!-- Overlay Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gradient_overlay_bottom">

            <!-- Infinity Icon -->
            <ImageView
                android:id="@+id/infinityIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/infinity"
                android:background="@drawable/circle_background"
                android:padding="8dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="Infinity option" />

            <!-- Grid Icon -->
            <ImageView
                android:id="@+id/gridIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/grid"
                android:background="@drawable/circle_background"
                android:padding="8dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="Grid view" />

            <!-- Select Multiple -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/selectMultipleIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/select_multiple"
                    android:background="@drawable/circle_background"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Select multiple items" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECT MULTIPLE"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <!-- Thumbnail Grid Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/thumbnailContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp" />

    </ScrollView>

    <!-- Bottom Tab Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <!-- Library Tab -->
        <LinearLayout
            android:id="@+id/libraryTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/libraryTabText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Library"
                android:textSize="14sp"
                android:textColor="#FF8B4513"
                android:textStyle="bold" />

            <View
                android:id="@+id/libraryTabIndicator"
                android:layout_width="40dp"
                android:layout_height="3dp"
                android:background="#FF8B4513"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Photo Tab -->
        <LinearLayout
            android:id="@+id/photoTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/photoTabText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo"
                android:textSize="14sp"
                android:textColor="#808B4513"
                android:textStyle="bold" />

            <View
                android:id="@+id/photoTabIndicator"
                android:layout_width="40dp"
                android:layout_height="3dp"
                android:background="#FF8B4513"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Video Tab -->
        <LinearLayout
            android:id="@+id/videoTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/videoTabText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video"
                android:textSize="14sp"
                android:textColor="#808B4513"
                android:textStyle="bold" />

            <View
                android:id="@+id/videoTabIndicator"
                android:layout_width="40dp"
                android:layout_height="3dp"
                android:background="#FF8B4513"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>