<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".HighlightActivity">

    <!-- Story Image Background -->
    <ImageView
        android:id="@+id/storyImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/shutterstock_100407100" />

    <!-- Story Progress Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <!-- Progress Segment 1 -->
        <View
            android:id="@+id/progressSegment1"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:layout_marginEnd="2dp" />

        <!-- Progress Segment 2 -->
        <View
            android:id="@+id/progressSegment2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#33FFFFFF"
            android:layout_marginEnd="2dp" />

        <!-- Progress Segment 3 -->
        <View
            android:id="@+id/progressSegment3"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#33FFFFFF" />

    </LinearLayout>

    <!-- Gradient Overlay for better text visibility -->
    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_overlay_top" />

    <!-- Top Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="8dp">

        <!-- Profile Picture -->
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_marginEnd="12dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shutterstock_1163329165"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <!-- Story Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/highlightTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highlight"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/storyDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="December 3, 2023"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="2dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/music"
                    android:layout_marginEnd="4dp"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/musicInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artist â€¢ Song Title"
                    android:textSize="12sp"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

        <!-- Close Button -->
        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/close"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- Story Title -->
    <TextView
        android:id="@+id/storyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Story Title"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />

    <!-- Floating Hearts Animation Area -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="120dp"
        android:orientation="vertical">

        <!-- Heart 1 -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/likefilled"
            android:layout_marginBottom="8dp"
            app:tint="#FF0000"
            android:alpha="0.8" />

        <!-- Heart 2 -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/likefilled"
            android:layout_marginBottom="6dp"
            app:tint="#FF0000"
            android:alpha="0.6" />

        <!-- Heart 3 -->
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/likefilled"
            android:layout_marginBottom="4dp"
            app:tint="#FF0000"
            android:alpha="0.4" />

    </LinearLayout>

    <!-- Tap Areas for Navigation -->
    <LinearLayout
        android:id="@+id/leftTapArea"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:id="@+id/rightTapArea"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@android:color/black"
        android:gravity="center"
        android:paddingHorizontal="20dp">

        <!-- Activity -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="24dp">

            <ImageView
                android:id="@+id/activityIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/likefilled"
                android:layout_marginBottom="4dp"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity"
                android:textSize="10sp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Create -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="24dp">

            <ImageView
                android:id="@+id/createIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/camera"
                android:layout_marginBottom="4dp"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create"
                android:textSize="10sp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Create Post -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="24dp">

            <ImageView
                android:id="@+id/createPostIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/grid"
                android:layout_marginBottom="4dp"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Post"
                android:textSize="10sp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Browse -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="24dp">

            <ImageView
                android:id="@+id/browseIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search"
                android:layout_marginBottom="4dp"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse"
                android:textSize="10sp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Send -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="24dp">

            <ImageView
                android:id="@+id/sendIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/share"
                android:layout_marginBottom="4dp"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"
                android:textSize="10sp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- More -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/moreIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/menu"
                android:layout_marginBottom="4dp"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More"
                android:textSize="10sp"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
