            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:background="@android:color/white"
            android:elevation="2dp">

            <!-- Back Arrow -->
            <ImageView
