<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Story Image -->
    <ImageView
        android:id="@+id/storyImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/shutterstock_100407100"
        android:scaleType="centerCrop" />

    <!-- Top Overlay with Profile Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/top_gradient_overlay"
        android:paddingTop="16dp">

        <!-- Progress Bar -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="16dp"
            android:background="@android:color/white"
            android:alpha="0.3" />

        <!-- Profile and Close Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Profile Image and Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/shutterstock_1163329165"
                    android:scaleType="centerCrop"
                    android:background="@drawable/profile_border_background" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/usernameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="gursky.studio"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/verifiedIcon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/verified"
                        android:layout_marginStart="4dp" />

                    <TextView
                        android:id="@+id/timeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11h"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:alpha="0.8"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Close Button -->
            <ImageView
                android:id="@+id/closeButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/close"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Live Reactions (Floating Hearts) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="120dp"
        android:orientation="vertical">

        <!-- Floating Hearts -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/heart"
            android:layout_marginBottom="8dp"
            android:alpha="0.8" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/heart"
            android:layout_marginBottom="8dp"
            android:alpha="0.6" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/heart"
            android:alpha="0.4" />

    </LinearLayout>

    <!-- Like Button -->
    <ImageView
        android:id="@+id/likeButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/heart"
        android:background="@drawable/like_button_background"
        android:padding="12dp" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@android:color/black"
        android:paddingBottom="16dp">

        <!-- Navigation Icons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:gravity="center_vertical">

            <!-- Activity Button -->
            <LinearLayout
                android:id="@+id/activityButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/activity_icon"
                    android:background="@drawable/activity_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activity"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Create Button -->
            <LinearLayout
                android:id="@+id/createButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/create_icon"
                    android:background="@drawable/create_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Facebook Button -->
            <LinearLayout
                android:id="@+id/facebookButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/facebook_icon"
                    android:background="@drawable/facebook_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facebook"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Highlight Button -->
            <LinearLayout
                android:id="@+id/highlightButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/highlight_icon"
                    android:background="@drawable/highlight_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Highlight"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- More Button -->
            <LinearLayout
                android:id="@+id/moreButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/more_vertical"
                    android:background="@drawable/more_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Home Indicator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FF8B4513"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</FrameLayout>
