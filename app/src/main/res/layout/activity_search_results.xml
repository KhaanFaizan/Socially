<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".SearchResultsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Main Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Search Bar Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:background="@android:color/white"
            android:elevation="2dp">

            <!-- Search Input -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/search_input_background"
                android:paddingHorizontal="12dp"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/search"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/searchQueryText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="imrankhan"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/close"
                    android:background="@drawable/circle_background"
                    android:padding="4dp" />

            </LinearLayout>

            <!-- Clear Button -->
            <TextView
                android:id="@+id/clearButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:textSize="16sp"
                android:textColor="#FF8B4513"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Navigation Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp">

            <!-- Top Tab -->
            <LinearLayout
                android:id="@+id/topTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:paddingVertical="8dp" />

                <!-- Active underline -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/black" />

            </LinearLayout>

            <!-- Accounts Tab -->
            <LinearLayout
                android:id="@+id/accountsTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accounts"
                    android:textSize="16sp"
                    android:textColor="#999999"
                    android:paddingVertical="8dp" />

                <!-- Inactive underline (hidden) -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/transparent" />

            </LinearLayout>

            <!-- Tags Tab -->
            <LinearLayout
                android:id="@+id/tagsTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tags"
                    android:textSize="16sp"
                    android:textColor="#999999"
                    android:paddingVertical="8dp" />

                <!-- Inactive underline (hidden) -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/transparent" />

            </LinearLayout>

            <!-- Places Tab -->
            <LinearLayout
                android:id="@+id/placesTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Places"
                    android:textSize="16sp"
                    android:textColor="#999999"
                    android:paddingVertical="8dp" />

                <!-- Inactive underline (hidden) -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/transparent" />

            </LinearLayout>

        </LinearLayout>

        <!-- Search Results List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Result 1 - Account -->
            <LinearLayout
                android:id="@+id/firstSearchResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="12dp"
                    app:cardBackgroundColor="#2196F3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="IK"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="imrankhan"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="imrankhan"
                        android:textSize="14sp"
                        android:textColor="#999999" />

                </LinearLayout>

            </LinearLayout>

            <!-- Result 2 - Hashtag -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="12dp"
                    app:cardBackgroundColor="@android:color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="#"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#imrankhan"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000+ posts"
                        android:textSize="14sp"
                        android:textColor="#999999" />

                </LinearLayout>

            </LinearLayout>

            <!-- Result 3 - Hashtag -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="12dp"
                    app:cardBackgroundColor="@android:color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="#"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#imrankhan_cricket"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500+ posts"
                        android:textSize="14sp"
                        android:textColor="#999999" />

                </LinearLayout>

            </LinearLayout>

            <!-- Result 4 - Place -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="12dp"
                    app:cardBackgroundColor="@android:color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="#"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Imran Khan Stadium"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lahore, Pakistan"
                        android:textSize="14sp"
                        android:textColor="#999999" />

                </LinearLayout>

            </LinearLayout>

            <!-- Result 5 - Hashtag -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="12dp"
                    app:cardBackgroundColor="@android:color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="#"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#imrankhan_politics"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100+ posts"
                        android:textSize="14sp"
                        android:textColor="#999999" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:paddingHorizontal="20dp">

        <!-- Home -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="40dp">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/home" />

            <!-- Inactive line (hidden) -->
            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Search -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="40dp">

            <ImageView
                android:id="@+id/searchBottomIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/searchfilled" />

            <!-- Red line for active tab -->
            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="#FF8B4513"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Add Post -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="40dp">

            <ImageView
                android:id="@+id/addPostIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/createpost" />

            <!-- Inactive line (hidden) -->
            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Activity -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="40dp">

            <ImageView
                android:id="@+id/activityIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/like" />

            <!-- Inactive line (hidden) -->
            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:cardCornerRadius="14dp">

                <ImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/shutterstock_1163329165"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <!-- Inactive line (hidden) -->
            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom horizontal line -->
    <View
        android:layout_width="80dp"
        android:layout_height="4dp"
        android:background="#FF8B4513"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>
