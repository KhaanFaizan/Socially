<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".YouNotificationActivity">

    <!-- Top Header with Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@android:color/white"
        android:elevation="2dp">

        <!-- Following Tab -->
        <LinearLayout
            android:id="@+id/followingTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Following"
                android:textSize="18sp"
                android:textColor="#CC8B4513"
                android:paddingVertical="8dp" />

            <!-- Inactive underline (hidden) -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/transparent" />

        </LinearLayout>

        <!-- You Tab -->
        <LinearLayout
            android:id="@+id/youTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You"
                android:textSize="18sp"
                android:textColor="#FF8B4513"
                android:textStyle="bold"
                android:paddingVertical="8dp" />

            <!-- Active underline -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FF8B4513" />

        </LinearLayout>

    </LinearLayout>

    <!-- Follow Requests -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/followRequestsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow Requests"
            android:textSize="16sp"
            android:textColor="#FF8B4513"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Main Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white">

        <!-- Main Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- New Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- New Notification -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <!-- Profile Picture -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/shutterstock_100407100"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <!-- Notification Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="karennne liked your photo. 1h"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <!-- Thumbnail Image -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/shutterstock_1011776404"
                        android:scaleType="centerCrop" />

                </LinearLayout>

            </LinearLayout>

            <!-- Today Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Today Notification -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <!-- Overlapping Profile Pictures -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginEnd="12dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/shutterstock_1011776404"
                                android:scaleType="centerCrop" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp"
                            android:layout_marginStart="-20dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/shutterstock_1163329165"
                                android:scaleType="centerCrop" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Notification Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kiero_d, zackjohn and 26 others liked your photo. 3h"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <!-- Thumbnail Image -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/shutterstock_1011776404"
                        android:scaleType="centerCrop" />

                </LinearLayout>

            </LinearLayout>

            <!-- This Week Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This Week"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Comment Notification -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <!-- Profile Picture -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/shutterstock_1163329165"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <!-- Notification Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="craig_love mentioned you in a comment: @jacob_w exactly.. 2d"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                        <!-- Reply section -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/like"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/replyButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reply"
                                android:textSize="14sp"
                                android:textColor="#666666" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Thumbnail Image -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/shutterstock_100407100"
                        android:scaleType="centerCrop" />

                </LinearLayout>

                <!-- Follow Notification 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <!-- Profile Picture -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/shutterstock_1011776404"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <!-- Notification Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="martini_rond started following you. 3d"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <!-- Message Button -->
                    <TextView
                        android:id="@+id/messageButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="Message"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:background="@drawable/message_input_background"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="6dp" />

                </LinearLayout>

                <!-- Follow Notification 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <!-- Profile Picture -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/shutterstock_1163329165"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <!-- Notification Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="maxjacobson started following you. 3d"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <!-- Message Button -->
                    <TextView
                        android:id="@+id/messageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="Message"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:background="@drawable/message_input_background"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="6dp" />

                </LinearLayout>

                <!-- Follow Notification 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <!-- Profile Picture -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/shutterstock_100407100"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <!-- Notification Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mis_potter started following you. 3d"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <!-- Follow Button -->
                    <TextView
                        android:id="@+id/followButton"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="Follow"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:background="#FF8B4513"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="6dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- This Month Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This Month"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Additional notifications can be added here -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More notifications from this month..."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:paddingVertical="8dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:paddingHorizontal="20dp">

        <!-- Home -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="40dp">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/home" />

            <!-- Inactive line (hidden) -->
            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Search -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="40dp">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/search" />

            <!-- Inactive line (hidden) -->
            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Add Post -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="40dp">

            <ImageView
                android:id="@+id/addPostIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/plus" />

            <!-- Inactive line (hidden) -->
            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Activity (Active) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="40dp">

            <ImageView
                android:id="@+id/activityIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/likefilled" />

            <!-- Active line -->
            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="#FF8B4513"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:cardCornerRadius="14dp">

                <ImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/shutterstock_1163329165"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <!-- Inactive line (hidden) -->
            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom horizontal line -->
    <View
        android:layout_width="80dp"
        android:layout_height="4dp"
        android:background="#FF8B4513"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>
